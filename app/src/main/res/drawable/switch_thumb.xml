<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="140">
    <item android:state_checked="true">
        <shape android:shape="oval" android:useLevel="false" android:visible="true">
            <solid android:color="?colorPrimary" />
            <size android:width="20dp" android:height="20dp" />
            <stroke android:width="8dp" android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval" android:useLevel="false" android:visible="true">
            <solid android:color="?colorOnPrimary" />
            <size android:width="20dp" android:height="20dp" />
            <stroke android:width="8dp" android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>